<?xml version="1.0" encoding="UTF-8"?>
<project name="WebDevNSBM" default="build" basedir=".">
    
    <!-- Define properties -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    
    <!-- Define target to compile Java source files -->
    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}"/>
    </target>
    
    <!-- Define target to create JAR file -->
    <target name="jar" depends="compile">
        <jar destfile="dist/WebDevNSBM.jar" basedir="${build.dir}"/>
    </target>
    
    <!-- Define target to clean build directory -->
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete file="dist/WebDevNSBM.jar"/>
    </target>
    
    <!-- Define default target -->
    <target name="build" depends="jar"/>
    
</project>

